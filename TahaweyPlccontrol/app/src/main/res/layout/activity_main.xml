<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="false"
    android:nestedScrollingEnabled="false"
    android:orientation="vertical"
    android:scrollIndicators="right"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbarSize="5pt"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tView20"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="IP"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/eT1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="192.168.11.1"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tView19"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:text="Slave ID"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/eT2"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="2"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="20pt">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/connectBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect" />

                <Button
                    android:id="@+id/button_Otp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP1" />

                <Button
                    android:id="@+id/button_Otp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP2" />

                <Button
                    android:id="@+id/button_Otp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP3" />
            </TableRow>

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="5pt"
        android:scrollbarSize="3dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:text="REG1"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tV1"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REG2"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REG3"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REG4"
                android:textColor="@color/red"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tV4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REG5"
                android:textColor="@color/Blue"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tV5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_input"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvShowNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/back_input"
            android:gravity="center|right"
            android:paddingRight="5pt"
            android:text="012"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/ListView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/connectBtn"
        android:layout_centerHorizontal="true">

    </ListView>

</LinearLayout>